---
import { Image } from 'astro:assets';
import Avatar from '../assets/avatar.png'
import Github from '../components/icons/github.astro';
import Mail from '../components/icons/mail.astro';
import FirendLinks from '../components/icons/friendLinks.astro';
import { getCollection } from 'astro:content';
const posts = await getCollection('posts');
const totalPosts = posts.length;
let tags = new Set();
posts.map((post) => {
    post.data.tags.map((tag) => {
        tags.add(tag);
    });
});
const totalTags = tags.size;
---

<html lang='en'>
    <head>
        <meta charset='utf-8' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='viewport' content='width=device-width' />
        <meta name='generator' content={Astro.generator} />
        <title>Radish Garden</title>
    </head>
    <body
        class='bg-bodyLight dark:bg-bodyDark flex flex-col font-serif overflow-hidden'
        style="height: calc(100vh - 4rem)"
    >
        <slot name='header' />
        <main class='flex flex-1'>
            <div class='flex flex-1'>
                <div
                    class='bg-bgLight dark:bg-bgDark flex flex-auto flex-col w-3/12 pl-16'
                >
                    <div
                        class='bg-foilLight dark:bg-foilDark flex flex-col items-center mt-2 ml-8 mr-4 rounded-2xl'
                    >
                        <Image
                            src={Avatar}
                            width={160}
                            height={160}
                            alt='avatar'
                            quality='max'
                            class='rounded-full mt-2 bg-bgLight border-2 hover:animate-spin'
                        />
                        <p
                            class='text-profileTextLight dark:text-profileTextDark text-2xl mt-2 italic'
                        >
                            Ryan
                        </p>
                        <p
                            class='text-descriptionTextLight dark:text-descriptionTextDark text-bg italic'
                        >
                            A CS enthusiast <span class='not-italic'>ðŸ¥°</span>
                        </p>
                        <div
                            class='flex flex-row w-full justify-center mt-4 mb-4 text-2xl text-profileTextLight dark:text-profileTextDark'
                        >
                            <div class='flex flex-col items-center mr-14'>
                                <p>Posts:</p>
                                <p>{totalPosts}</p>
                            </div>
                            <div class='flex flex-col items-center'>
                                <p>Tags:</p>
                                <p>{totalTags}</p>
                            </div>
                        </div>
                        <div
                            class='flex flex-row w-full mb-4 justify-center text-bg text-profileTextLight dark:text-profileTextDark'
                        >
                            <a
                                href=''
                                class='inline-flex w-2/5 mr-1 justify-center hover:bg-bgLight dark:hover:bg-bgDark rounded-md'
                            >
                                <Github class='h-6 w-4 mr-1' />
                                GitHub
                            </a>
                            <a
                                href=''
                                class='inline-flex w-2/5 justify-center hover:bg-bgLight dark:hover:bg-bgDark rounded-md'
                            >
                                <Mail class='h-6 w-4 mr-1' />
                                Mail
                            </a>
                        </div>
                    </div>
                    <div
                        class='bg-foilLight dark:bg-foilDark flex flex-col items-center mt-2 ml-8 mr-4 rounded-2xl min-h-28'
                    >
                        <div
                            class='flex flex-col items-center text-bg text-profileTextLight dark:text-profileTextDark'
                        >
                            <div class='flex flex-row mt-2'>
                                <FirendLinks class='h-6 w-4 mr-1' />
                                Friend Links
                            </div>
                        </div>
                    </div>
                </div>
                <div class='flex-auto w-8/12 ml-0.5 mr-0.5'>
                    <slot name="main" />
                </div>
                <div class='bg-bgLight dark:bg-bgDark flex-auto w-2/12'>
                    <div class='flex justify-center'>
                        <p
                            class='italic text-descriptionTextLight dark:text-descriptionTextDark'
                        >
                            Posts grows here~
                        </p>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>
