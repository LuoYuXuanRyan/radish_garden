---
import { Image } from 'astro:assets';
import Avatar from '../assets/avatar.png';
import { getCollection } from 'astro:content';
const posts = await getCollection('posts');
const totalBlogs = posts.length;
let tags = new Set();
posts.map((post) => {
    post.data.tags.map((tag) => {
        tags.add(tag);
    });
});
const totalTags = tags.size;
---

<html lang='en'>
    <head>
        <meta charset='utf-8' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='viewport' content='width=device-width' />
        <meta name='generator' content={Astro.generator} />
        <title>Radish Garden</title>
    </head>
    <body
        class='bg-bodyLight dark:bg-bodyDark h-screen flex flex-col font-serif'
    >
        <slot name='header' />
        <main class='flex w-full h-full justify-center items-center'>
            <div class='flex flex-row w-3/4 border-2 p-4'>
                <div class='flex items-center'>
                    <Image
                        src={Avatar}
                        alt='avatar'
                        width={180}
                        height={180}
                        class='border-2 bg-bgLight shrink-0'
                    />
                </div>
                <div class='flex flex-col items-start ml-4 italic w-3/4'>
                    <p class='text-3xl text-profileTextLight dark:text-profileTextDark'>
                        Ryan
                        <span class='text-xl ml-6 text-descriptionTextLight dark:text-descriptionTextDark dark:opacity-80'>
                            ---- A CS enthusiast <span class="not-italic">ðŸ¥°</span>
                        </span>
                    </p>
                    <p class='text-lg ml-4 indent-8 text-fontLight dark:text-fontDark'>
                        I'm a student at Nanjing University of Posts and
                        Telecommunications (NJUPT), where I'm studying Computer
