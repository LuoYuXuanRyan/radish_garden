---
import * as motion from 'motion/react-client';

export interface Props {
    src: string;
    alt?: string;
    size?: { base: number; md: number };
}
const { src, alt = 'avatar', size = { base: 36, md: 40 } } = Astro.props;
---

<motion.div client:load whileHover={{ scale: 1.1 }} whileTap={{ scale: 0.8 }}>
    <img
        src={src}
        alt={alt}
        class={`rounded-full border-2 border-foilDark dark:border-foilLight
        h-${size.base} w-${size.base} md:h-${size.md} md:w-${size.md}`}
    />
</motion.div>
